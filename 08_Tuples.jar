//Tuples

val ingredient = ("Sugar", 25)

println(ingredient._1) // When accessing thi elements use underscore
println(ingredient._2)

// pattern matching on tuples 1
val (name, quantity) = ingredient
println(name)
println(quantity)

// pattern matching on tuples 2
val planets = 
  List(("Mercury", 57.9), ("Venus", 108.2), ("Earth", 149.6),
       ("Mars", 227.9), ("Jupiter", 778.3))
planets.foreach{
  case ("Earth", distence) =>
    println(s"our planet is $distence million kilometers from the sun")
  case _ =>
}  

// pattern matching on tuples 3
val numPairs = List((2, 5), (3, -7), (20, 56))
for ((a, b) <- numPairs) {
  println("::", a * b)
}

